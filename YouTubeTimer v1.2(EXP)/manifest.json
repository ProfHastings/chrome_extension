{
  "manifest_version": 3,
  "name": "YouTube Time Tracker",
  "version": "1.1",
  "description": "Tracks time spent on YouTube while a video is playing",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "YT Logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*",
        "https://youtu.be/*"
      ],
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}